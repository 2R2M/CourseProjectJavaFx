<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<Pane prefWidth="600" prefHeight="600" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mycourseproject.NewExpense" >
    <children>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints halignment="LEFT" />
            </columnConstraints>

            <Label text="Название:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Введите название" />

            <Label text="Дата:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Сумма:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Введите сумму" />

            <Button text="Добавить" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" />
        </GridPane>
    </children>
</Pane>
